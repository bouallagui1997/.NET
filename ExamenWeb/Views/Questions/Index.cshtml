@model  IEnumerable<Web.Models.QuestionModel>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_myTemplate.cshtml";

}

<h2>List of questions</h2>



@using (Html.BeginForm("Index", "Questions", FormMethod.Post))
{
    <div class="row">
        
        <div class="col-sm-4">
            <p> search by title @Html.TextBox("title") </p>
         

            <input id="Submit1" type="submit" value="Filter by title" />
        </div>
    </div>

    <div> <br /></div>


   <div  class="row">
       <div class="col-sm-4">
           search by category2:
           <select class="form-control" id="category" name="category">
               <option></option>
               <option>Product</option>
               <option>Technical</option>
               <option>Service</option>
               <option>Finance</option>
           </select>

           <input id="Submit2" type="submit" value="filter by category" />
           </div>
       </div>


}
<br />
<table class="table">
    
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
          @Html.ActionLink("Title Question", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>

        <th>
            @Html.ActionLink("Date Question", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categories)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.title_question)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.date_question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categories)
            </td>
            <td>
                <button type="button" class="btn btn-default">

              @Html.ActionLink("Check list Response", "ListResponse", new { id = item.QuestionId, title_question = item.title_question })
                </button>
                
                <button type="button" class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", new { id = item.QuestionId })
                    </button>
                <button type="button" class="btn btn-default">
                  
                    @Html.ActionLink("Details", "Details", new { id = item.QuestionId })
                    </button>
                <button type="button" class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", new { id = item.QuestionId })
                    </button>
</td>
        </tr>
    }

</table>
<br />
<col class="col-lg-offset-10" />
<div >
   
    <button type="button" class="btn btn-default">@Html.ActionLink("Pie chart Statistics", "Pie", null, null)</button>
    <button type="button" class="btn btn-default">@Html.ActionLink("bar chart Statistics", "Bar", null, null)</button>
   

    <button type="button" class="btn btn-default">@Html.ActionLink("Add new Question", "createQuestion")</button>
</div>